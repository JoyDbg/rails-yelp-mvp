<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-8 p-5">
      <h1 class="text-center"><i class="fa-solid fa-utensils"></i> All Restaurants<i class="fa-solid fa-utensils"></i> </h1>
        <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Phone number</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
        <tbody>
        <% @restaurants.each do |restaurant| %>

            <tr>
              <th scope="row"><%= restaurant.id %></th>
              <td><%= link_to restaurant.name, restaurant_path(restaurant), class:"text-decoration-none text-black" %></td>
              <td><%= restaurant.address %></td>
              <td><%= restaurant.phone_number %></td>
              <td><%= restaurant.category %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <div class="d-grid gap-2 col-6 mx-auto p-5">
         <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
